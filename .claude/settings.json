{
  "env": {},
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(git commit:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "WebFetch(domain:docs.ansible.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:developer.hashicorp.com)",
      "WebFetch(domain:releases.hashicorp.com)",
      "WebFetch(domain:www.terraform.io)",
      "WebFetch(domain:github.com)",
      "mcp__sequential-thinking-mcp__sequentialthinking",
      "mcp__memory-mcp__create_entities",
      "mcp__memory-mcp__create_relations",
      "mcp__memory-mcp__add_observations",
      "mcp__memory-mcp__search_nodes"
    ],
    "deny": [],
    "defaultMode": "default"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "superpowers@superpowers-dev": true,
    "plugin-dev@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true
  },
  "syntaxHighlightingDisabled": false
}
