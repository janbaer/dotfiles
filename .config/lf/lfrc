# vim:ft=conf


# Basic Settings
set hidden true
set ignorecase true
set icons true
set preview true
set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean
set shell bash

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd delete ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    rm -r "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd restore_trash ${{
  trash-restore
}}

cmd on-select &{{
  lf -remote "send $id set statfmt \"$(exa -ld --color=always "$f")\""
}}

cmd lazy_git ${{
  lazygit -p $f
}}

cmd ren-name ${{
  rename $file
}}

# Remove default bindings
map d
map m
map w

# Add my own bindings
map au unarchive
map ae $wine "$f"

# Basic Functions
map . set hidden!
map D delete
map dd trash
map dr restore_trash
map l lazy_git
map p paste
map x cut
map y copy
map <enter> open
map r rename
map R reload
map mf mkfile
map md mkdir
map C clear
map S $$SHELL

# Shortcuts for directories
map gH cd ~/
map gD cd ~/Documents
map gd cd ~/Downloads
map gP cd ~/Projects
map gp cd ~/Pictures
map gV cd ~/Videos
map gN cd "/media/jan/mailbox-drive/Jan Baer/Notes/"
map gw cd /media/MyNotes/Wochenberichte/2024/
map gx cd /media/XXX5/
map gc cd ~/.config
map gs cd ~/.local/bin
map gt cd ~/.local/share/Trash/files
