{
  "mcpServers": {
    "forgejo-mcp": {
      "command": "/home/jan/bin/forgejo-mcp",
      "args": [
        "--url",
        "https://forgejo.home.janbaer.de"
      ],
      "env": {
        "FORGEJO_ACCESS_TOKEN": "${FORGEJO_TOKEN}"
      }
    },
    "chrome-devtools-mcp": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest",
        "--executablePath=/etc/profiles/per-user/jan/bin/chromium"
      ]
    }
  }
}

